<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="BsStreamDeckEditor" parent="AdwBin">

    <child>
      <object class="GtkBox">

        <child>
          <object class="AdwClamp">
            <property name="hexpand">True</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <property name="maximum-size">1000</property>
            <property name="tightening-threshold">700</property>

            <child>
              <object class="GtkAspectFrame">
                <property name="obey-child">False</property>
                <property name="ratio">1.8</property>

                <child>
                  <object class="GtkFlowBox" id="buttons_flowbox">
                    <property name="homogeneous">True</property>
                    <property name="activate-on-single-click">False</property>
                    <property name="selection-mode">single</property>
                    <property name="column-spacing">18</property>
                    <property name="row-spacing">18</property>
                    <signal name="selected-children-changed" handler="on_flowbox_selected_children_changed_cb" object="BsStreamDeckEditor" swapped="no" />
                  </object>
                </child>

              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="GtkSeparator">
            <property name="orientation">vertical</property>
          </object>
        </child>


        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkStackSwitcher">
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="margin-start">6</property>
                <property name="margin-end">6</property>
                <property name="stack">sidebar_stack</property>
              </object>
            </child>

            <child>
              <object class="GtkSeparator">
                <property name="orientation">horizontal</property>
              </object>
            </child>


            <child>
              <object class="GtkStack" id="sidebar_stack">
                <property name="vexpand">True</property>

                <!-- Button -->
                <child>
                  <object class="GtkStackPage">
                    <property name="name">button</property>
                    <property name="title" translatable="yes">Actions</property>
                    <property name="child">
                      <object class="BsStreamDeckButtonEditor" id="button_editor" />
                    </property>
                  </object>
                </child>

                <!-- Device -->
                <child>
                  <object class="GtkStackPage">
                    <property name="name">device</property>
                    <property name="title" translatable="yes">Device</property>
                    <property name="child">
                      <object class="AdwPreferencesPage">
                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="title" translatable="yes">Device</property>

                            <!-- Serial Number -->
                            <child>
                              <object class="AdwActionRow">
                                <property name="title" translatable="yes">Serial Number</property>
                                <child>
                                  <object class="GtkLabel" id="serial_number_label">
                                    <property name="hexpand">True</property>
                                    <property name="xalign">1.0</property>
                                    <style>
                                      <class name="caption" />
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <!-- Firmware Version -->
                            <child>
                              <object class="AdwActionRow">
                                <property name="title" translatable="yes">Firmware</property>
                                <child>
                                  <object class="GtkLabel" id="firmware_version_label">
                                    <property name="hexpand">True</property>
                                    <property name="xalign">1.0</property>
                                    <style>
                                      <class name="caption" />
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <!-- Brightness -->
                            <child>
                              <object class="AdwActionRow">
                                <property name="title" translatable="yes">Brightness</property>
                                <child>
                                  <object class="GtkScale" id="brightness_scale">
                                    <property name="hexpand">True</property>
                                    <property name="valign">center</property>
                                    <property name="round-digits">3</property>
                                    <property name="adjustment">
                                      <object class="GtkAdjustment" id="brightness_adjustment">
                                        <property name="lower">0.0</property>
                                        <property name="upper">1.0</property>
                                        <property name="step-increment">0.02</property>
                                        <property name="page-increment">0.05</property>
                                        <property name="value">0.5</property>
                                        <signal name="notify::value" handler="on_brightness_adjustment_value_changed_cb" object="BsStreamDeckEditor" swapped="no" />
                                      </object>
                                    </property>
                                  </object>
                                </child>
                              </object>
                            </child>

                          </object>
                        </child>
                      </object>
                    </property>

                  </object>
                </child>

              </object>
            </child>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
