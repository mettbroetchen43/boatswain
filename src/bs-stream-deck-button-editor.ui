<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="Gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="BsStreamDeckButtonEditor" parent="AdwBin">
    <property name="width-request">300</property>

    <child>
      <object class="GtkStack" id="stack">
        <property name="transition-type">crossfade</property>

        <child>
          <object class="GtkStackPage">
            <property name="name">empty</property>
            <property name="child">
              <object class="AdwStatusPage">
                <property name="title" translatable="yes">Select a button</property>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="GtkStackPage">
            <property name="name">button</property>
            <property name="child">
              <object class="AdwLeaflet" id="leaflet">
                <property name="can-unfold">False</property>


                <child>
                  <object class="AdwLeafletPage">
                    <property name="name">button</property>
                    <property name="child">
                      <object class="AdwPreferencesPage" id="button_preferences_page">

                        <!-- Custom icon -->
                        <child>
                          <object class="AdwPreferencesGroup">

                            <child>
                              <object class="GtkOverlay">
                                <property name="halign">center</property>
                                <property name="valign">center</property>
                                <property name="margin-bottom">6</property>

                                <child>
                                  <object class="GtkImage" id="icon_image">
                                    <property name="width-request">128</property>
                                    <property name="height-request">128</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="overflow">hidden</property>
                                    <style>
                                      <class name="card" />
                                    </style>
                                  </object>
                                </child>

                                <child type="overlay">
                                  <object class="GtkButton" id="remove_custom_icon_button">
                                    <property name="halign">end</property>
                                    <property name="valign">start</property>
                                    <property name="icon-name">window-close-symbolic</property>
                                    <signal name="clicked" handler="on_remove_custom_icon_button_clicked_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                    <style>
                                      <class name="circular" />
                                      <class name="outline" />
                                    </style>
                                  </object>
                                </child>

                                <child type="overlay">
                                  <object class="GtkMenuButton" id="custom_icon_menubutton">
                                    <property name="halign">end</property>
                                    <property name="valign">end</property>
                                    <property name="icon-name">document-edit-symbolic</property>

                                    <!-- Custom icon popover -->
                                    <property name="popover">
                                      <object class="GtkPopover">
                                        <style>
                                          <class name="custom-icon-popover" />
                                        </style>
                                        <child>
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>

                                            <child>
                                              <object class="GtkBox">
                                                <property name="margin-top">6</property>
                                                <property name="margin-bottom">6</property>
                                                <property name="margin-start">6</property>
                                                <property name="margin-end">6</property>
                                                <property name="spacing">6</property>

                                                <child>
                                                  <object class="GtkSearchEntry" id="builtin_icons_search_entry">
                                                    <property name="hexpand">True</property>
                                                  </object>
                                                </child>

                                                <child>
                                                  <object class="GtkButton">
                                                    <property name="icon-name">document-open-symbolic</property>
                                                    <signal name="clicked" handler="on_custom_icon_button_clicked_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                                  </object>
                                                </child>

                                              </object>
                                            </child>

                                            <child>
                                              <object class="GtkSeparator" />
                                            </child>

                                            <child>
                                              <object class="GtkScrolledWindow">
                                                <property name="hscrollbar-policy">never</property>
                                                <property name="min-content-width">300</property>
                                                <property name="min-content-height">300</property>

                                                <property name="child">
                                                  <object class="GtkGridView" id="icons_gridview">
                                                    <property name="single-click-activate">True</property>
                                                    <property name="model">
                                                      <object class="GtkNoSelection">
                                                        <property name="model">builtin_icons_model</property>
                                                      </object>
                                                    </property>
                                                    <property name="factory">
                                                      <object class="GtkBuilderListItemFactory">
                                                        <property name="bytes"><![CDATA[
<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GtkListItem">
    <property name="child">
      <object class="GtkImage">
        <binding name="icon-name">
          <lookup type="GtkStringObject" name="string">
            <lookup name="item">GtkListItem</lookup>
          </lookup>
        </binding>
        <binding name="tooltip-text">
          <lookup type="GtkStringObject" name="string">
            <lookup name="item">GtkListItem</lookup>
          </lookup>
        </binding>
      </object>
    </property>
  </template>
</interface>
                                                        ]]></property>
                                                      </object>
                                                    </property>
                                                    <signal name="activate" handler="on_icons_gridview_activate_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                                  </object>
                                                </property>

                                              </object>
                                            </child>

                                          </object>
                                        </child>
                                      </object>
                                    </property>
                                    <style>
                                      <class name="circular" />
                                      <class name="outline" />
                                    </style>
                                  </object>
                                </child>

                              </object>
                            </child>

                            <child>
                              <object class="GtkListBox">
                                <property name="selection-mode">none</property>
                                <style>
                                  <class name="boxed-list" />
                                </style>

                                <child>
                                  <object class="AdwActionRow" id="custom_icon_text_row">
                                    <property name="title" translatable="yes">Name</property>
                                    <property name="activatable-widget">custom_icon_text_entry</property>
                                    <child>
                                      <object class="GtkEntry" id="custom_icon_text_entry">
                                        <property name="valign">center</property>
                                        <signal name="notify::text" handler="on_custom_icon_text_entry_text_changed_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                      </object>
                                    </child>
                                  </object>
                                </child>

                                <child>
                                  <object class="AdwActionRow" id="background_color_row">
                                    <property name="title" translatable="yes">Background Color</property>
                                    <property name="activatable-widget">background_color_button</property>
                                    <child>
                                      <object class="GtkColorButton" id="background_color_button">
                                        <property name="valign">center</property>
                                        <property name="modal">True</property>
                                        <signal name="color-set" handler="on_background_color_button_color_set_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                      </object>
                                    </child>
                                  </object>
                                </child>

                              </object>
                            </child>

                          </object>
                        </child>

                        <!-- Action preferences -->
                        <child>
                          <object class="AdwPreferencesGroup" id="action_preferences_group">
                            <property name="visible">False</property>
                          </object>
                        </child>

                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="visible" bind-source="remove_action_button" bind-property="visible" bind-flags="default|sync-create|invert-boolean" />

                            <child>
                              <object class="AdwActionRow">
                                <property name="title" translatable="yes">Select action</property>
                                <property name="activatable">True</property>
                                <signal name="activated" handler="on_select_action_row_activated_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                <child>
                                  <object class="GtkImage">
                                    <property name="valign">center</property>
                                    <property name="icon-name">go-next-symbolic</property>
                                  </object>
                                </child>
                              </object>
                            </child>

                          </object>
                        </child>

                        <child>
                          <object class="AdwPreferencesGroup">

                            <child>
                              <object class="GtkButton" id="remove_action_button">
                                <property name="visible">False</property>
                                <property name="label" translatable="yes">Remove Action</property>
                                <signal name="clicked" handler="on_remove_action_button_clicked_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                <style>
                                  <class name="destructive-action" />
                                </style>
                              </object>
                            </child>

                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="AdwLeafletPage">
                    <property name="name">actions</property>
                    <property name="child">
                      <object class="AdwPreferencesPage">

                        <child>
                          <object class="AdwPreferencesGroup">
                            <child>
                              <object class="GtkButton">
                                <signal name="clicked" handler="on_go_previous_button_clicked_cb" object="BsStreamDeckButtonEditor" swapped="no" />
                                <style>
                                  <class name="flat" />
                                </style>

                                <child>
                                  <object class="GtkCenterBox">

                                    <child type="start">
                                      <object class="GtkImage">
                                        <property name="icon-name">go-previous-symbolic</property>
                                      </object>
                                    </child>

                                    <child type="center">
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Select action</property>
                                        <style>
                                          <class name="heading" />
                                        </style>
                                      </object>
                                    </child>

                                  </object>
                                </child>

                              </object>
                            </child>

                          </object>
                        </child>

                        <child>
                          <object class="AdwPreferencesGroup">
                            <child>
                              <object class="GtkListBox" id="actions_listbox">
                                <property name="selection-mode">none</property>
                                <style>
                                  <class name="boxed-list" />
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

              </object>

            </property>
          </object>
        </child>

      </object>
    </child>

  </template>

  <!-- Built-in icons model -->
  <object class="GtkSortListModel" id="builtin_icons_model">
    <property name="sorter">
      <object class="GtkStringSorter">
        <property name="expression">
          <lookup type="GtkStringObject" name="string" />
        </property>
      </object>
    </property>
    <property name="model">
      <object class="GtkFilterListModel">
        <property name="filter">
          <object class="GtkStringFilter">
            <property name="match-mode">substring</property>
            <property name="expression">
              <lookup type="GtkStringObject" name="string" />
            </property>
            <binding name="search">
              <lookup name="text">builtin_icons_search_entry</lookup>
            </binding>
          </object>
        </property>
        <property name="model">
          <object class="GtkStringList" id="builtin_icons_stringlist">
            <items>
              <item>camera-1-symbolic</item>
              <item>camera-2-symbolic</item>
              <item>camera-3-symbolic</item>
              <item>camera-4-symbolic</item>
              <item>chat-symbolic</item>
              <item>dialpad-symbolic</item>
              <item>hdmi-symbolic</item>
              <item>image-missing-symbolic</item>
              <item>image-symbolic</item>
              <item>movie-intro-symbolic</item>
              <item>offline-symbolic</item>
              <item>on-hold-symbolic</item>
              <item>phone-input-symbolic</item>
              <item>screencast-record-symbolic</item>
              <item>technical-difficulties-symbolic</item>
              <item>twitch-symbolic</item>
              <item>video-loop-symbolic</item>
              <item>wacom-symbolic</item>
              <item>youtube-symbolic</item>

              <!-- Default plugin -->
              <item>stacked-plates-symbolic</item>

              <!-- Launcher plugin -->
              <item>app-launch-symbolic</item>
              <item>open-link-symbolic</item>

              <!-- OBS Studio plugin -->
              <item>dotted-box-symbolic</item>
              <item>eye-not-looking-symbolic</item>
              <item>eye-open-negative-filled-symbolic</item>
              <item>obs-scene-symbolic</item>
              <item>obs-scene-transition-symbolic</item>
              <item>obs-switch-scene-symbolic</item>
              <item>obs-symbolic</item>
              <item>obs-window-symbolic</item>
              <item>record-symbolic</item>
              <item>square-outline-thick-symbolic</item>
              <item>transmit-symbolic</item>

              <!-- Soundboard plugin -->
              <item>audio-mixer-symbolic</item>
              <item>audio-only-symbolic</item>
              <item>music-queue-symbolic</item>
              <item>org.gnome.Music-symbolic</item>

            </items>
          </object>
        </property>
      </object>
    </property>
  </object>

</interface>
