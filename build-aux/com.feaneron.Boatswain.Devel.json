{
    "app-id" : "com.feaneron.Boatswain.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "boatswain",
    "tags" : [
        "devel"
    ],
    "finish-args" : [
        "--device=all",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "x-run-args" : [
        "--debug"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libusb",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--disable-udev"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libusb/libusb.git"
                }
            ]
        },
        {
            "name" : "hidapi-libusb",
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libusb/hidapi.git"
                }
            ]
        },
        {
            "name" : "gusb",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/hughsie/libgusb.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "libpeas",
            "buildsystem" : "meson",
            "cleanup" : [
                "/bin/*",
                "/lib/peas-demo"
            ],
            "config-opts" : [
                "-Ddemos=false",
                "-Dgtk_doc=false",
                "-Dwidgetry=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libpeas.git"
                }
            ]
        },
        {
            "name" : "libportal",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dbackends=gtk4",
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/flatpak/libportal.git",
                    "tag" : "0.5"
                }
            ]
        },
        {
            "name" : "boatswain",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dtracing=true",
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/feaneron/boatswain.git"
                }
            ]
        }
    ]
}
